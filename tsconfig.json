{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "esnext.asynciterable", "dom"]
  }
}
